<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>runner</id>

    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- runner jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/${webapp.dir}/WEB-INF/lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
        <!-- bin dir -->
        <fileSet>
            <directory>${project.basedir}/src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <!-- conf dir -->
        <fileSet>
            <directory>${project.build.directory}/${tmp.dir}/${conf.dir}</directory>
            <outputDirectory>/${conf.dir}</outputDirectory>
        </fileSet>
        <!-- webapp dir -->
        <fileSet>
            <directory>${project.build.directory}/${tmp.dir}/${webapp.dir}</directory>
            <outputDirectory>/${webapp.dir}</outputDirectory>
            <excludes>
                <exclude>/WEB-INF/lib/*</exclude>
            </excludes>
        </fileSet>

    </fileSets>
    <!-- lib dir -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/${webapp.dir}/WEB-INF/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>*:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>

</assembly>